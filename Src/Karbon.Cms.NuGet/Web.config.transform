<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <configSections>
    <sectionGroup name="karbon">
      <section name="fileStores" type="Karbon.Core.Configuration.FileStoresSection, Karbon.Core"/>
      <section name="dataSerializers" type="Karbon.Core.Configuration.DataSerializersSection, Karbon.Core"/>
    </sectionGroup>
  </configSections>

  <karbon>
    <fileStores>
      <providers>
        <add name="content" type="Karbon.Core.IO.LocalFileStore, Karbon.Core"
             rootPath="~/App_Data/Content/" pathSeperator="/" />
        <add name="media" type="Karbon.Core.IO.LocalFileStore, Karbon.Core"
             rootPath="~/Media/" pathSeperator="/" />
      </providers>
    </fileStores>
    <dataSerializers default="karbon">
      <providers>
        <add name="karbon" type="Karbon.Core.Serialization.KarbonDataSerializer, Karbon.Core"
             fileExtension="txt" />
      </providers>
    </dataSerializers>
  </karbon>

</configuration>