<?xml version="1.0" encoding="utf-8"?>
<!--
  For more information on how to configure your ASP.NET application, please visit
  http://go.microsoft.com/fwlink/?LinkId=169433
  -->
<configuration>

  <configSections>
    <sectionGroup name="karbon">
      <section name="fileSystems" type="Karbon.Core.Configuration.FileSystemsSection, Karbon.Core, Version=1.0.0.0, Culture=neutral"/>
      <section name="pageDataSerializers" type="Karbon.Core.Configuration.PageDataSerializersSection, Karbon.Core"/>
    </sectionGroup>
  </configSections>
  
  <appSettings>
    <add key="webpages:Version" value="2.0.0.0" />
    <add key="webpages:Enabled" value="false" />
    <add key="PreserveLoginUrl" value="true" />
    <add key="ClientValidationEnabled" value="true" />
    <add key="UnobtrusiveJavaScriptEnabled" value="true" />
  </appSettings>

  <karbon>
    <!--
      TODO: Some nice explanitory comments
    -->
    <fileSystems>
      <providers>
        <add name="content" type="Karbon.Core.IO.PhysicalFileSystem, Karbon.Core" 
             virtualRoot="~/App_Data/Content/" />
        <add name="media" type="Karbon.Core.IO.PhysicalFileSystem, Karbon.Core"
             virtualRoot="~/App_Data/Media/" />
      </providers>
    </fileSystems>
    <!--
      TODO: Some nice explanitory comments
    -->
    <pageDataSerializers default="karbon">
      <providers>
        <add name="karbon" type="Karbon.Core.Serialization.KarbonPageDataSerializer, Karbon.Core" />
      </providers>
    </pageDataSerializers>
  </karbon>
  
  <system.web>
    <httpRuntime targetFramework="4.5" />
    <compilation debug="true" targetFramework="4.5" />
    <pages>
      <namespaces>
        <add namespace="System.Web.Helpers" />
        <add namespace="System.Web.Mvc" />
        <add namespace="System.Web.Mvc.Ajax" />
        <add namespace="System.Web.Mvc.Html" />
        <add namespace="System.Web.Routing" />
        <add namespace="System.Web.WebPages" />
      </namespaces>
    </pages>
  </system.web>
  
  <system.webServer>
    <validation validateIntegratedModeConfiguration="false" />
  </system.webServer>
  
</configuration>